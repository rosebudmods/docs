---
import { itemInfo } from '@ts/minecraft';
import { Image } from 'astro:assets';
import Block from './Block.astro';

interface Props {
    id: string;
    type?: 'item' | 'block';
}

const { id, type } = Astro.props;

const assets = import.meta.glob<{ default: ImageMetadata }>(
    '/src/assets/mc-assets/assets/minecraft/textures/*/*.png',
);
const info = itemInfo(id, type);
---

{
    info.type === 'item' ? (
        <Image
            src={assets[info.texture]!()}
            alt={id.replaceAll('_', ' ')}
            format="png"
            class="img"
        />
    ) : (
        <Block cuboids={info.cuboids} />
    )
}

<style lang="scss">
    .img {
        display: inline-block !important;
        margin: 0 !important;

        font-size: 2em;
        vertical-align: top;
        image-rendering: pixelated;

        width: 1em;
        height: 1em;
    }
</style>

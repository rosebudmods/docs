---
import { itemInfo } from '@ts/minecraft';
import Block from './Block.astro';

interface Props {
    id: string;
    type?: 'item' | 'block';
    size?: string;
}

const { id, type, size = '2em' } = Astro.props;

const assets = import.meta.glob<{ default: ImageMetadata }>(
    '/src/assets/mc-assets/assets/minecraft/textures/*/*.png',
);
const info = itemInfo(id, type);
---

{
    info.type === 'item' ? (
        <img
            src={(await assets[info.texture]!()).default.src}
            alt={id.replaceAll('_', ' ')}
            class="img"
            style={`font-size: ${size};`}
        />
    ) : (
        <Block cuboids={info.cuboids} {size} />
    )
}

<style lang="scss">
    .img {
        display: inline-block !important;
        margin: 0 !important;

        vertical-align: top;
        image-rendering: pixelated;

        width: 1em;
        height: 1em;
    }
</style>

---
import type { Cuboid } from '@ts/minecraft';
import CuboidComponent from './Cuboid.astro';

interface Props {
    cuboids: Cuboid[];
}

const { cuboids } = Astro.props;
---

<span class="block">
    {cuboids.map((cuboid) => <CuboidComponent {cuboid} />)}
</span>

<style lang="scss">
    .block {
        display: inline-flex;
        position: relative;
        justify-content: center;
        vertical-align: middle;
        width: 1.5em;
        height: 1em;
        font-size: 1.25em;
    }
</style>

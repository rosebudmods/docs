---
import { CardGrid } from '@astrojs/starlight/components';
import ModCard from './ModCard.astro';
import { modsList } from '@ts/modrinth';

interface Props {
    wide?: boolean;
}

const { wide = false } = Astro.props;
---

{
    wide ? (
        modsList.map((mod) => <ModCard {mod} />)
    ) : (
        <CardGrid>
            {modsList.map((mod) => (
                <ModCard {mod} />
            ))}
        </CardGrid>
    )
}

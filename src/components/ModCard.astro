---
import type { Project } from '@ts/modrinth';
import { formatNumber } from '@ts/util';

interface Props {
    mod: Project;
    extended?: boolean;
}

const { mod, extended = false } = Astro.props;
const banner = mod.gallery?.filter((g) => g.featured)[0];
---

<article class:list={['card', !extended && 'link']}>
    {banner && <img class="banner" src={banner.url} aria-hidden="true" />}
    <p class="title sl-flex">
        <img
            class="icon"
            src={mod.icon_url}
            alt=`Icon for ${mod.title}`
        />
        <span>{mod.title}</span>
        {!extended && <a class="filling" href=`/${mod.slug}/` />}
    </p>
    <div class="body">{mod.description}</div>
    {extended && <div class="info">
        <div>
            <span><b>{mod.client_side}</b> on client, <b>{mod.server_side}</b> on server</span>
            <span>released for <b>{mod.game_versions[0]}</b>&mdash;<b>{mod.game_versions.at(-1)}</b></span>
            <span>
                <a href={mod.source_url}>sources</a> &bull;
                <a href={mod.issues_url}>issues</a>
            </span>
        </div>
        <div class="stats">
            <span>{formatNumber(mod.downloads)}</span> downloads
        </div>
    </div>}
</article>

<style lang="scss">
    .card {
        --sl-card-border: var(--sl-color-purple);
        --sl-card-bg: var(--sl-color-purple-low);

        display: flex;
        flex-direction: column;
        position: relative;

        background-color: var(--sl-color-black);
        border: 1px solid var(--sl-color-gray-5);
        border-radius: 1rem;

        transition: transform 0.25s;

        .filling::before {
            content: '';
            position: absolute;
            inset: 0;
        }

        &.link:hover {
            transform: scale(102.5%);
        }

        .banner {
            width: 100%;
            height: 8rem;
            object-fit: cover;
            margin-bottom: -5rem;

            border-radius: 1em 1em 0 0;
        }

        .icon {
            border: 4px solid var(--sl-color-black);
            border-radius: 1rem;
            width: 4em;
        }

        .title {
            padding: 1.5rem 2rem 0;
            gap: 0.75rem;
            align-items: center;

            font-weight: 600;
            font-size: var(--sl-text-h4);
            color: var(--sl-color-white);
            line-height: var(--sl-line-height-headings);
        }

        &:has(.banner) .title span {
            margin-top: 2rem;
        }

        .body {
            padding: 0 2rem;
            font-size: clamp(
                var(--sl-text-sm),
                calc(0.5rem + 1vw),
                var(--sl-text-body)
            );
        }

        .info {
            display: flex;
            justify-content: space-between;
            padding: 0 2rem;

            > div {
                display: flex;
                flex-direction: column;
            }

            > .stats {
                text-align: right;

                span {
                    font-size: 3em;
                    line-height: 1;
                }
            }
        }

        > :last-child {
            margin-bottom: 1.5rem;
        }
    }
</style>
